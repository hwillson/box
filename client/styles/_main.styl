body
  font-family 'Source Sans Pro', 'sans-serif'
  -webkit-font-smoothing antialiased
  color #5c6b80

a
  color #273b4d

a:hover, a:focus
  color #18242f

.box
  h1
    color $colorTitle
    font-weight 700
    font-size 1.125em
    margin-bottom 25px
    margin-top 18px
    border-bottom 1px solid #D4E0EC
    padding-bottom 5px
    line-height 1.4em
    text-rendering optimizelegibility
    letter-spacing 0
  table
    border 1px solid #D4E0EC
    border-collapse separate
    th
      background-color #F9FAFC
      font-weight 100
      color #848E97
      text-align left
      padding 15px 10px
      border-bottom none
    td
      border-top 1px solid #D4E0EC
      border-bottom none
      padding 5px 10px
      vertical-align middle
    th:last-child, td:last-child
      padding-right 20px
    .box-item-image
      text-align center
    .box-item-quantity
      text-align center
    .box-item-price
      text-align right
    p
      margin 0